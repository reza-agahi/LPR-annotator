<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Faraadid LPR tool</title>

    <link rel="stylesheet" href="./css/3rdparty/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="./css/3rdparty/w3.css">
    <link rel="stylesheet" href="./css/index.css">
    <script src="./js/3rdparty/angular.min.js"></script>
    <script src="./js/3rdparty/jquery.min.js"></script>
    <script src="./js/3rdparty/fabric.js"></script>
  </head>
  <body ng-app="app" ng-controller="appController" ng-Keydown="keyPress($event)">
    <header>
      <!-- TODO: We should place a header related to annotator and faraadid here! -->
    </header>
    <nav>
      {{> nav}}
    </nav>

    <!-- main section of application -->
    <section style="position: relative;" class="w3-section">

      <div style="direction: rtl; width: 50%; margin: auto;">
        {{> plateStates}}
        {{> helpText}}
        {{> canvas}}
      </div>

      {{> plateT1}}
      {{> radioDifficulty}}
      {{> radioPlateType}}
      {{> checkboxAnnotatable}}

      <div class="arrow-keys">
        <i ng-click="previous();" id="previous" class="w3-hover-text-red w3-text-orange fa fa-arrow-circle-left"></i>
        <i ng-click="next();" id="next" class="w3-hover-text-red w3-text-orange fa fa-arrow-circle-right"></i>
      </div>

      <img ng-show="currentPlate.state=='annotated'" style="position: absolute;
           left:100px; top: 20px;" width="100" height="100" src="./assets/images/checked.jpg"
           alt="annotated-badge" />
    </section>

    <footer>
      {{> footer}}
    </footer>

    <!-- modules -->
    <script type="text/javascript" src="./js/app.js"></script>

    <!-- controllers -->
    <script type="text/javascript" src="./js/controllers/appController.js"></script>

    <!-- services -->
    <script type="text/javascript" src="./js/services/getInfo.js"></script>
    <script type="text/javascript" src="./js/services/updateInfo.js"></script>

    <!-- directives -->

    <!-- socket.io -->
    <script src="/socket.io/socket.io.js"></script>
    <script type="text/javascript">
      var socket = io();
    </script>

  </body>
</html>
